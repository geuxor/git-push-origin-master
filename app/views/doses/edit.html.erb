<%= link_to 'List', doses_path, :class => "btn btn-primary shadow" %>
<%= link_to 'New dose', new_dose_path, :class => "btn btn-primary shadow" %>
<%= link_to "Delete",
            dose_path(@dose),
            method: :delete,
            data: { confirm: "Are you sure?" }, :class => "btn btn-primary shadow" %>
<br><br><br>

<div class="container">
<div class="row m-16">
  <%= form_for @dose do |f| %>
  <div class="row">
    <%= f.label :name, "Name", :class => "col-3 col-form-label" %>
    <div class="col-9">
      <%= f.text_field :name, :class => "form-control mb-3" %>
    </div>
  </div>
  <div class="row">
    <%= f.label :picture_url, "Picture url", :class => "col-3 col-form-label" %>
    <div class="col-9">
      <%= f.text_area :picture_url, :class => "form-control mb-3" %>
    </div>
  </div>
  <div class="row justify-content-md-end">
    <%= f.submit :class => "btn btn-primary shadow" %>
  </div>
  <% end %>
</div>
</div>
