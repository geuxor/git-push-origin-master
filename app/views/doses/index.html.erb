<div class="navbar p-2">
  <%= link_to 'New dose', new_dose_path, class: "btn btn-primary shadow" %>
</div>

<div class="container col-12">
  <h1>My Tasty doses</h1>
  <p><strong>These doses are gonna make you spook!</strong></p>
  
	<% @doses.each do |tail| %>
    <div class="d-flex p-2">
      <%= link_to dose_path(tail.id) do %>
      <%= tail.name %>
      <%= tail.picture_url %>      
      <% end %>
    </div>
  <% end %>

</div>
