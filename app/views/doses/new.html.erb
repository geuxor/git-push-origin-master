<div class="container my-5">
<div class="row m-16">
  <%= simple_form_for [@cocktail, @dose] do |f| %>
  <div class="row">
    <div class="col-9">
      <%= f.input :description, input_html:{:class => "form-control mb-3"}%>
    </div>
  </div>
  <div class="row">
    <div class="col-9">
      <%= f.association :ingredient, input_html:{:class => "form-control mb-3" } %>
    </div>
  </div>
  <div class="row justify-content-md-end">
    <%= f.submit :class => "btn btn-primary shadow" %>
  </div>
  <% end %>
</div>
</div>
