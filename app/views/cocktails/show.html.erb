<div class="container">
<%= link_to 'List', cocktails_path, :class => "btn btn-primary shadow my-5" %>
<%= link_to 'New cocktail', new_cocktail_path, :class => "btn btn-primary shadow" %>
<%= link_to 'Edit', edit_cocktail_path(@cocktail.id), :class => "btn btn-primary shadow" %>
<%= link_to "Delete",
            cocktail_path(@cocktail),
            method: :delete,
            data: { confirm: "Are you sure?" }, :class => "btn btn-primary shadow" %>


    <div class="d-flex p-2">

      <div class="card-product w-400">
        <%= cl_image_tag @cocktail.photo.key %>
        <div class="card-product-infos">
          <h2><%= @cocktail.name %></h2>
        </div>
      </div>

    </div>


<%= link_to 'New Dose', new_cocktail_dose_path(@cocktail), :class => "btn btn-primary shadow" %>
	<% @cocktail.doses.each do |dose| %>
    <div class="d-flex p-2">
        <%= dose.description %>
        <%= dose.ingredient.name %>
          <%= link_to dose_path(dose), method: :delete, data: { confirm: "Yeahh just do it!" } do %>
        <i class="fas fa-trash"></i>
      <% end %>
    </div>
  <% end %>
