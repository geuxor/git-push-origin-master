<div class="container col-9">
  <div class="navbar p-2"> 
    <%= link_to 'New Cocktail', new_cocktail_path, class: "btn btn-primary shadow my-5" %>
  </div>
  <h1>My Tasty Cocktails</h1>
  <p><strong>These cocktails are gonna make you spook!</strong></p>


  <div class="d-flex align-content-around flex-wrap">
    <% @cocktails.each do |cocktail| %>
      <div class="card-category" style="background-image: url('<%= cl_image_path cocktail.photo.key %>');">
        <div class="card-description">
        <%= link_to cocktail.name, cocktail_path(cocktail) %>
          <div class="flex-column p-2">
            <% cocktail.doses.each do |dose| %>            
              <div>
                <%= dose.description %>
                <%= dose.ingredient.name %>
              </div>
            <% end %>
           </div>
        </div>
      </div>
    <% end %>
  </div>
  
</div>


