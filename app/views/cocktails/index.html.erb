<div class="container col-9">
      
  <div class="navbar"> 
    <%= link_to 'New Cocktail', new_cocktail_path, class: "btn btn-primary shadow" %>
  </div>

        <div class="card-product card-product-title">
          <h2>My Tasty Cocktails</h2>
          <p><strong>Cocktails that makes you spook!</strong></p>
        </div>



  <div class="d-flex align-content-around flex-wrap">
    <% @cocktails.each do |cocktail| %>
      <div class="card-category" style="background-image: url('<%= cl_image_path cocktail.photo.key %>');">
        <div class="card-description">
        <%= link_to cocktail.name, cocktail_path(cocktail) %>
          <div class="flex-column p-2">
            <% cocktail.doses.each do |dose| %>            
              <div>
                <%= dose.description %>
                <%= dose.ingredient.name %>
              </div>
            <% end %>
           </div>
        </div>
      </div>
    <% end %>
  </div>
  
</div>


